
header
  // size 100% 94px
  position fixed
  top 0
  right 0
  width 100%
  background black
  // border-bottom 1px solid rgba(255,255,255,.1)
  padding 30px
  box-sizing border-box

  .logo
    display inline-block
    cursor pointer

    a
      color white

    img
      width 50px

nav
  float right
  font-size 18px

  ul li
    display inline
    color white

    &:not(:last-child)
      padding-right 15px
      margin-right 15px
      border-right 1px solid _white

    a
      color white
      // font-weight bold

      &:hover
        color _primary
