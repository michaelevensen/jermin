.groups
  div
    // col(1/2)

  h1
    border-bottom 1px solid rgba(255,255,255,.2)

  div ul li
    border-bottom 1px solid rgba(255,255,255,.2)
    margin 30px 0

    &.name
      cursor pointer
      padding 20px 0
      font normal 32px/1.4 'Maison Neue Mono Regular', Consolas 'Andale Mono', monospace
      letter-spacing -1px

      a
        color white
        display block

        &:hover
          color _primary

      span
        color _white
        font-size 16px

        a
          display inline-block
          color _primary

          &:hover
            border-bottom 1px solid _primary
