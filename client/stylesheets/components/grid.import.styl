.grid
  display flex
  flex-flow row wrap
  align-items center
  // align-items flex-start
  justify-content center
  // background blue
  margin 0 75px

  +below(1280px)
    margin 0 35px

  .grid-item
    border 1px solid _white
    transition border-color .2s
    padding 20px
    // align-self flex-start
    overflow hidden
    width 500px
    margin 10px

    &:hover
      border-color _primary

    .item
      margin 0 auto
