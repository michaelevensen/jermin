input[type='checkbox']
	cursor pointer
	margin-right 6px

textarea,
input[type='text'],
input[type='password']
	color _dark
	border 1px solid _light
	box-sizing border-box
	box-shadow none
	padding 20px
	appearance none
	outline none
	width 100%
	resize none
	border-radius 0
	margin-bottom 20px

	&:focus
		outline none

	&.dark
		color white
		border 1px solid rgba(255,255,255,.2)
		background transparent

		&::placeholder
			color rgba(255,255,255,.25)

	// prefill default
	&:-webkit-autofill
		// background-color blue
		box-shadow 0 0 0px 1000px white inset

// placeholder text
::placeholder
	color rgba(0,0,0,.15)

select
	background-color white
	margin 20px auto

label
	cursor pointer
	user-select none


/*
*	Form Groups
*/
.form-group
	label
		color _gray
		margin-bottom 100px
